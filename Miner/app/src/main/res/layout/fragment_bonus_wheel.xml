<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_menu_portrait"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_wheel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:rotation="30"
        android:src="@drawable/img_spin_wheel"
        app:layout_constraintBottom_toTopOf="@+id/start_wheel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/img_logotype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_spin_wheel_arrow"
        app:layout_constraintBottom_toTopOf="@+id/main_wheel"
        app:layout_constraintEnd_toEndOf="@+id/main_wheel"
        app:layout_constraintStart_toStartOf="@+id/main_wheel"
        app:layout_constraintTop_toTopOf="@+id/main_wheel" />

    <com.gonzup.upslt.game.other.CustomButton
        android:id="@+id/start_wheel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="40dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_classic_button"
        style="@style/BasicText"
        android:text="@string/spin"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>